{
  "name": "hardhat-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate repository to get you started with Hardhat and Ethereum development",
  "scripts": {
    "test": "yarn run hardhat test --network hardhat",
    "test-qiyichain": "yarn run hardhat test --network qiyichain",
    "compile": "yarn run hardhat compile",
    "clean": "yarn run hardhat clean",
    "deploy": "yarn run hardhat deploy --network qiyichain"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NomicFoundation/hardhat-boilerplate.git"
  },
  "author": "Nomic Foundation",
